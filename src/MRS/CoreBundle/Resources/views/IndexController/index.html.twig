{% extends "::base.html.twig" %}

{% block title %}MRS Blog{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">

            {{ knp_pagination_render(pagination) }}

            <div class="col-lg-12">
    {% for post in pagination %}
                <article class="col-lg-4">
                    <div class="thumbnail">
                        <a href="{{ path('show',{'slug': post.slug}) }}">

                         </a>

                        <div class="caption">
                            <h3>
                                <a href="{{ path('show',{'slug': post.slug}) }}">
                                    {{ post.title }}
                                </a>
                            </h3>

                            <p>{{ post.author.name }}</p>
                            <p>{{ post.content | slice(0, 45) }}</p>
                            <p>
                                <a href="{{ path('show',{'slug': post.slug}) }}">
                                    Leia mais...
                                </a>
                             </p>
                         </div>
                     </div>
                </article>
    {% endfor %}
            </div>
         </div>
        {{ knp_pagination_render(pagination) }}
      </div>
{% endblock %}
